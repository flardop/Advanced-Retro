# Example .env.local for local development
# Copy this file to .env.local and fill the values with your Supabase project keys.
# Do NOT commit .env.local to git. Rotate keys immediately if they've been exposed.

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://<your-project-ref>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=<your_anon_public_key>
SUPABASE_SERVICE_ROLE_KEY=<your_service_role_key>

# Optional: IGDB credentials for better image results (if you use IGDB)
IGDB_CLIENT_ID=
IGDB_CLIENT_SECRET=

# Optional: Stripe (if used)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_SITE_URL=http://localhost:3020
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=

# Optional: SMTP emails (order notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Optional: PriceCharting API (comparativa de mercado)
PRICECHARTING_API_TOKEN=

# Optional: create-admin-user script
ADMIN_EMAIL=
ADMIN_PASSWORD=
